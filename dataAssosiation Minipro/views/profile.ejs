<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="flex justify-end w-full">
            <a class="bg-red-500 rounded-md px-2 py-2 text-sm inline-block" href="/logout"> Logout</a>
        </div>
        <h3 class="text-3xl">Hello, <%= user.name%>ðŸ—¿ </h3>
        <h5 class="mb-5">you can create a post</h5>
        <form action="/post" method="post">
            <textarea placeholder="Whats in your mind ?"
                class="block p-3 w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"
            ></textarea>
            <input class="px-6 py-2 w-25 text-sm bg-blue-500 rounded-md block mt-2" type="submit" value="Post">
        </form>
        <div class="post mt-20">
            <h3 class="text-zinc-400 text-2xl">Your Posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){%>
                    <div class="post w-1/3 p-5 rounded-md mb-4 border-2 border-zinc-700 bg-zinc-800">
                        <h4 class="text-blue-500 mb-2"><%=user.username%></h4>
                        <p class="tracking-tight"><%=post.content%></p>
                        <small class="mt-2 inline-block"><%=post.like.length%> likes</small>
                        <div class="btns flex gap-6 ">
                            <a class="text-blue-500 " href="/like/<%=post._id%>">
                                <!-- <%= post.like.indexOf(user._id) === -1 ? "Like": "Unlike" %> -->
                                <%= post.like.length === 1 ? "UnLike": "Like" %>
                            </a>
                            <a class="text-zinc-600" href="/edit/<%=post._id%>">edit</a>
                        </div>
                    </div>
                <%})%>
                
            </div>
        </div>
    </div>
</body>

</html>